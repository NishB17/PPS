#include <stdio.h>

int main()
{   
        char c;
        char * Choice;
        char rep;
        int a,b;
        float op; 
    
        while(1){
        printf("\nSimple Calculator \n1) Addition : + \n2) Subtraction : - \n3) Multiplication : * \n4) Division : // \n5) Modulus : % \nEnter Choice : ");
        scanf(" %c",&c);
        printf("\n Enter two numbers : ");
        scanf("%d %d",&a,&b);
        switch(c){
            case '+':
            case '1':
                Choice = "Addition";
                op = a+b;
                break;
            case '-':
            case '2':
                Choice = "Subtraction";
                op = a-b;
                break;
            case '*':
            case '3':
                Choice = "Multiplication";
                op = a*b;
                break;
            case '/':
            case '4':
                Choice = "Division";
                op = a/b;
                break;
            case '%':
            case '5':
                Choice = "Modulus";
                op = a%b;
                break;
            default:
                Choice = "Invalid";
                op = 0;
        }
        printf("\n     Choice = %s\n     Output = %f\n\n",Choice,op);
        printf("Do you want to continue(y/n)?\n");
        scanf(" %c",&rep);
        if(rep!='y'){break;};
        
    }
    return 0;
}

